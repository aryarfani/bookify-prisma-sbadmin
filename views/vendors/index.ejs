<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Vendors List</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Vendors</h6>
                <a href="vendors/create" class="btn btn-success"> + Create Vendor</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nama</th>
                            <th>Email</th>
                            <th>Join Date</th>
                            <th>Balance</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% vendors.forEach(vendor=> { %>
                            <tr>
                                <td>
                                    <%= vendor.name %>
                                </td>
                                <td>
                                    <%= vendor.email %>
                                </td>
                                <td>
                                    <%= vendor.createdAt.toISOString().slice(0, 10) %>
                                </td>
                                <td>
                                    <%= vendor.balance %>
                                </td>
                                <td>
                                    <a href="/vendors/<%= vendor.id %>/edit" class="btn btn-primary">Edit</a>
                                    <!-- <a href="/vendors/<%= vendor.id %>/delete" class="btn btn-danger">Delete</a> -->
                                </td>
                            </tr>
                            <% }) %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>