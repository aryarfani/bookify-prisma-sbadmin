<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Create Vendor</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Form Vendor</h6>
        </div>
        <div class="card-body">
            <form action="/vendors/<%= vendor.id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input value="<%= vendor.name %>" required class="form-control" type="text" name="name">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input value="<%= vendor.email %>" required class="form-control" type="email" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <small>(Insert only if you want to change password)</small>
                    <input class="form-control" type="text" name="password">
                </div>
                <button class="btn btn-primary" type="submit">Save</button>
            </form>
        </div>
    </div>
</div>